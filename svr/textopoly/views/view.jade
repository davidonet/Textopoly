script(type='text/javascript')
  var params=!{JSON.stringify(params)};

div#content
  div#uiWrap
    div#header
      div#topbar
      h1 TEXTOPOLY
      div#blink
      ul#topmenu
    div#zoomWrap
      div#zoom
        div#zoomSlider
    div#footer
      h1 Chemins de lecteurs
    

  div.grid#map(class='z'+params.zoom)
    each txt in texts
      div.msg(dc=txt.p,style='left:#{txt.absx}px;top:#{txt.absy}px;',class=txt.s+' '+txt.lclass+' '+txt.c,id=txt.absid)
        if( params.zoom < 20)
          if txt.i
            img(src='/getimg/['+txt.p+']')
          else
            if txt.t
              p #{txt.t}
            else
              p.author #{txt.a}
