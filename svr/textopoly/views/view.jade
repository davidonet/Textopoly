        span#path_start nouveau
        span#path_end fin
    

  div.grid#map(class='z'+params.zoom)
    each txt in texts
      div.msg(dc=txt.p,style='left:#{txt.absx}px;top:#{txt.absy}px;',class='mdf '+txt.s+' '+txt.lclass+' '+txt.c)
        if( params.zoom < 20)
          if txt.i
            img(src='/getimg/['+txt.p+']')
          else
            if txt.t
              p #{txt.t}
            else
              p.author #{txt.a}
        if( params.zoom == 2)
          div.ctx x
