extends base
	
block body
	h1 #{author}
	if su
		h2 
			a(href="mailto"+email) #{email}
	a(href=url) #{url}
	hr
	h2 Liste des textes
	div#paths(style="overflow-x:hidden;height:300px;border:2px #eee solid")
		table
			each t in txts
				tr
					td
						p.p 
							a(href='/view?zoom=2&xcenter='+t.p[0]+'&ycenter='+t.p[1]) #{t.p}
					td
						p #{t.d.toDateString()} 
					td
						p.t #{t.t}
	hr
	h2 Liste des chemins
	div#paths(style="overflow:auto;height:200px;border:1px #eee solid")
		table
			each p in paths
				tr
					td
						p.p
							a(href='/book/'+p._id) #{p.sp}
					td
						p #{p.d.toDateString()} 	
					td 
						p #{p.pw.length}
					td
						p.t #{p.title}
					td
						p
							input(type="button",value="Supprimer",onclick="del_book('"+p._id+"')")

	if su
		input(type="button",value="Liste d'auteurs",style="float:right",onclick="document.location='/admin'")
	div#footer
				h2
					a(href="/") Textopoly
	script(type="text/javascript")
		function del_book(id){
			if(confirm("Suppression irrémédiable d'un chemin")){
				document.location="/admin/delbook/"+id;
			}else{
			}
		}
	

